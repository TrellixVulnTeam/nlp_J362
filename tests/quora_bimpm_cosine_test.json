{
  "dataset_reader": {
    "type": "quora_paraphrase",
    "lazy": false,
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "just_spaces"
      }
    }
  },
  "train_data_path": "tests/quora_train_sample.tsv",
  "validation_data_path": "tests/quora_train_sample.tsv",
  "model": {
    "type": "bimpm_cosine",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 300,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.1
    },
    "matcher_fw": {
      "is_forward": true,
      "hidden_dim": 100,
      "num_perspective": 20
    },
    "matcher_bw": {
      "is_forward": false,
      "hidden_dim": 100,
      "num_perspective": 20
    },
    "aggregator":{
      "type": "lstm",
      "bidirectional": true,
      "input_size": 210,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.1
    },
    "feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [150, 75],
      "activations": ["relu", "linear"],
      "dropout": [0.25, 0]
    },
    "margin": 0.4
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "sorting_keys": [["premise", "num_tokens"], ["hypothesis", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
}
