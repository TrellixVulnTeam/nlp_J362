{
  "dataset_reader": {
    "type": "quora_paraphrase",
    "lazy": false,
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "just_spaces"
      }
    },
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": false
      },
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "tests/quora_train_sample.tsv",
  "validation_data_path": "tests/quora_train_sample.tsv",
  "model": {
    "type": "esim_cosine",
    "dropout": 0.1,
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 300,
        "trainable": false
      },
      "token_characters": {
        "type": "character_encoding",
        "embedding": {
          "embedding_dim": 20
        },
        "encoder": {
          "type": "gru",
          "input_size": 20,
          "hidden_size": 50,
          "num_layers": 1,
          "dropout": 0.1,
          "bidirectional": true
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 400,
      "hidden_size": 100,
      "num_layers": 1,
      "bidirectional": true
    },
    "similarity_function": {"type": "dot_product"},
    "projection_feedforward": {
      "input_dim": 800,
      "hidden_dims": 100,
      "num_layers": 1,
      "activations": "relu"
    },
    "inference_encoder": {
      "type": "lstm",
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "bidirectional": true
    },
    "output_feedforward": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": [200, 100],
      "activations": ["relu", "linear"],
      "dropout": [0.1, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "sorting_keys": [["premise", "num_tokens"], ["hypothesis", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "grad_norm": 10.0,
    "validation_metric": "+accuracy",
    "cuda_device": -1,
    "optimizer": {
        "type": "adam",
        "lr": 0.001
    }
  }
}
