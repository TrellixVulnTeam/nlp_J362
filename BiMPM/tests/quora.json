{
  "dataset_reader": {
    "type": "quora_paraphrase"
  },
  "train_data_path": "tests/quora_sample.tsv",
  "validation_data_path": "tests/quora_sample.tsv",
  "model": {
    "type": "bimpm",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 50,
        "trainable": false
      }
    },
    "encoder": {
      "type": "boe",
      "embedding_dim": 50,
      "averaged": true
    },
    "classifier_feedforward": {
      "input_dim": 100,
      "num_layers": 2,
      "hidden_dims": [20, 10],
      "activations": ["sigmoid", "linear"],
      "dropout": [0.1, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "padding_noise": 0.0,
    "sorting_keys": [["s1", "num_tokens"], ["s2", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
